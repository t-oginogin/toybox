<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h2><%= pluralize(@book.errors.count, "error") %></h2>

        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :title %><br>
    </div>
    <div class="col-md-2">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :author %><br>
    </div>
    <div class="col-md-2">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :publisher %><br>
    </div>
    <div class="col-md-2">
      <%= f.text_field :publisher, class: "form-control" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :isbn %><br>
    </div>
    <div class="col-md-2">
      <%= f.text_field :isbn, class: "form-control" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :cover %><br>
    </div>
    <div class="col-md-4">
      <%= image_tag(@book.cover_url) if @book.cover? %>
      <%= f.file_field :cover, class: "filestyle" %>
      <%= f.hidden_field :cover_cache %>
      <label>
        <%= f.check_box :remove_cover %> Remove Cover
      </label>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

  <br/>
<% end %>
